{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["public", ".next", "node_modules", "drizzle"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"css": {
		"parser": {
			"cssModules": true
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"suspicious": {
				"noReactSpecificProps": "off"
			}
		}
	},
	"javascript": {
		"globals": ["React"],
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": [
				"next.config.ts",
				"postcss.config.mjs",
				"drizzle.config.ts",
				"layout.tsx",
				"page.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		},
		{
			"include": ["db/schema/index.ts"],
			"linter": {
				"rules": {
					"performance": {
						"noBarrelFile": "off"
					}
				}
			}
		},
		{
			"include": ["db/index.ts"],
			"linter": {
				"rules": {
					"style": {
						"noNamespaceImport": "off"
					}
				}
			}
		},
		{
			"include": ["lib/actions/*"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": {
							"level": "off",
							"options": {
								"strictCase": false
							}
						}
					}
				}
			}
		}
	]
}
